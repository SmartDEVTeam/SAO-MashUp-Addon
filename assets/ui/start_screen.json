  "paper_doll_panel": {
    "type": "panel",
    "offset": [ "0%", "0%" ],
    "anchor_from": "center_middle",
    "anchor_to": "center_middle",
    "size": [ 42, 78 ],
    "visible": "$paper_doll_visible",
    "controls": [
      {
        "paper_doll": {
          "type": "custom",
          "renderer": "paper_doll_renderer",
          "size": [ 4, 0 ],
          "layer": 2,
          "anchor_from": "center_middle",
          "anchor_to": "center"
        }
      },
      {
        "paper_doll_name_tag": {
          "type": "custom",
          "renderer": "name_tag_renderer",
          "anchor_from": "center_middle",
          "anchor_to": "center",
          "size": [ 42, 0 ],
          "offset": [ 0, -25 ],
          "layer": 2,
          "bindings": [
            { 
              "binding_name": "#playername",
              "binding_condition": "visible"
            }
          ]
        }
      },
      {
        "paper_doll_button": {
          "type": "button",
          "layer": 2,
          "anchor_to": "top_center",
          "anchor_from": "top_center",
          "size": [ 42, 78 ],
          "offset": [ 0, 0 ],
          "sound_name": "game.player.die",
          "sound_volume": 1.0,
          "sound_pitch": 1.0,
          "focus_enabled": true,
          "button_mappings": [
            {
              "from_button_id": "button.menu_select",
              "to_button_id": "button.menu_skins",
              "mapping_type": "pressed"
            },
            {
              "from_button_id": "button.menu_ok",
              "to_button_id": "button.menu_skins",
              "mapping_type": "pressed"
            }
          ]
        }
      }
    ]
  },

  //---------------------------------------------------------------------------
  // Buttons
  //---------------------------------------------------------------------------

  "linkstart_button@common.button": {
    "$pressed_button_name": "button.menu_play",
    "size": [ "30%", "15%" ],
    "offset": [ "0%", "37%" ],
    "sound_name": "random.player.linkstart",
    "sound_volume": 5.0,
    "controls": [
      {
        "default@$button_state_default_base": {
          "controls": [
            {
              "@common.button_text": {
                "text": "Link Start"
              }
            }
          ]
        }
      },
      {
        "hover@$button_state_hover_base": {
          "controls": [
            {
              "@common.button_text": {
                "text": "Link Start",
                "color": [ 1.0, 1.0, 0.2 ]
              }
            }
          ]
        }
      },
      {
        "pressed@$button_state_pressed_base": {
          "controls": [
            {
              "@common.button_text": {
                "text": "Link Start",
                "color": [ 1.0, 1.0, 0.2 ],
                "alpha": 0.65
              }
            }
          ]
        }
      }
    ]
  },

