    "size": [ 0.1, 0.1 ],
    "layer": 2,
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right"
  },

  "title_panel_pocket": {
    "type": "panel",
    "size": [ "55%", "10.6%x" ],
    "offset": [ 0, "10%" ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "title_image": {
          "type": "image",
          "layer": 1,
          "texture": "gui/titleOriginal.png",
          "uv": [ 0, 0 ],
          "uv_size": [ 1936, 375 ]
        }
      },
      {
        "@splash_text": {
          "offset": [ 0, "-6.25%x" ]
        }
      }
    ]
  },

  "title_panel_win10": {
    "type": "panel",
    "size": [ "55%", "10.6%x" ],
    "offset": [ 0, "10%" ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "title_image": {
          "type": "image",
          "layer": 1,
          "texture": "gui/titleOriginal.png",
          "uv": [ 0, 0 ],
          "uv_size": [ 1936, 375 ]
        }
      },
