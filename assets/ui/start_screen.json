  "development_version": {
    "type": "label",
    "size": [ 50, 10 ],
    "alignment": "center",
    "layer": 2,
    "text": "#development_version",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "bindings": [
      { 
        "binding_name": "#development_version",
        "binding_condition": "visible"
      }
    ]
  },

  "version": {
    "type": "label",
    "size": [ 50, 10 ],
