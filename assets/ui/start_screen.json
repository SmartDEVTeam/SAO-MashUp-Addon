  "title_panel_edu": {
    "type": "panel",
    "size": [ "55%", "13.35%x" ],
    "offset": [ 0, "10%" ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "title_image": {
          "type": "image",
          "layer": 1,
          "texture": "gui/titleEdu.png",
